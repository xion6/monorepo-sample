{
  "name": "ecommerce-platform",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "rimraf": "^5.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "pnpm lint:fix",
      "pnpm format --write"
    ],
    "**/*.{json,md}": "pnpm format --write"
  }
}
